<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>MCQ Test</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-Lg5p5IoJjYGPx9XddV1xJ75Cj7V/dU6l/uU6wG+CHk1JbV3qILWm9V7e1nxR0AtV7iOJ6Uwtw6ZmK6+v1VfUg==" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <header class="bg-dark py-4">
      <div class="container">
        <h1 class="text-white text-center mb-0">MCQ Test</h1>
      </div>
    </header>
    <main class="py-5 bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-10">
            <form action="/submit" method="post">
              <% for (let i = 0; i < questions.length; i++) { %>
                <div class="card shadow mb-4">
                  <div class="card-body">
                    <h2 class="card-title h5 mb-3"><%= i+1 %>. <%= questions[i].question %></h2>
                    <% for (let j = 0; j < questions[i].options.length; j++) { %>
                      <div class="form-check">
                        <input class="form-check-input" type="radio" name="q<%= i+1 %>" id="q<%= i+1 %>_<%= j+1 %>" value="<%= questions[i].options[j] %>" required>
                        <label class="form-check-label ms-2" for="q<%= i+1 %>_<%= j+1 %>"><%= questions[i].options[j] %></label>
                      </div>
                    <% } %>
                  </div>
                </div>
              <% } %>
              <div class="text-center">
                <button class="btn btn-primary btn-lg px-5 mt-4">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </main>
